pipeline {
    agent any

    tools {nodejs "node" }

    stages {
        stage('Build') {
            steps {
                echo 'Build Stage'
                bat 'npm install'
                bat 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deployment Stage'
            }
        }
        stage('Test') {
            steps {
                echo 'Test Stage'
            }
        }
    }
}